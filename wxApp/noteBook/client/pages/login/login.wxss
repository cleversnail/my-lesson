/* pages/login/login.wxss */
.star-login{
  width: 100vw;
  height: 100vh;
  background-color: #fff;
  padding: 0 96rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.title{
  height: 52rpx;
  line-height: 52rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 36rpx;
  text-align: center;
  font-family: Arial, Helvetica, sans-serif;
  margin-top: 40rpx;
}

.login-wrapper{
  width: 558rpx;
  height: 800rpx;
  margin-top: 50rpx;
  border-radius: 10rpx;
  border: 1rpx solid rgba(187, 180, 187, 1);
  box-shadow: 0 0 40rpx rgba(170, 170, 170, 1);
  overflow: hidden;
}

.avatar{
  width: 180rpx;
  height: 180rpx;
  margin: 82rpx auto 58rpx;
  border-radius: 50%;
  overflow: hidden;
}
.avatar image{
  width: 100%;
}

.input-group{
  width: 416rpx;
  height: 92rpx;
  line-height: 92rpx;
  display: flex;
  margin: 0 auto;
  border: 1px solid rgba(187, 187, 187, 1);
  border-radius: 40rpx;
  padding-left: 40rpx;
  opacity: 0.5;
  margin-bottom: 10px;
}
label{
  display: inline-flex;
  width: 72rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  font-family: Arial, Helvetica, sans-serif;
}
input{
  display: inline-block;
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
  padding-left: 10px;
  font-size: 28rpx;
}
.forgot-pwd {
  display: block;
  text-align: right;
  margin: 20rpx auto 42rpx 0;
  padding-right: 50rpx;
  box-sizing: border-box;
  height: 46rpx;
  line-height: 46rpx;
  opacity: 0.3;
  color: rgba(16, 16, 16, 1);
  font-size: 24rpx;
  font-family: Arial;
}

.sign {
  margin: 0 auto;
  width: 416rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 40rpx;
  background-color: rgba(51, 54, 67, 1);
  text-align: center;
  opacity: 0.8;
  color: rgba(255, 255, 255, 1);
  font-size: 36rpx;
  font-family: Arial;
}

.register {
  display: block;
  height: 46rpx;
  margin-top: 162rpx;
  line-height: 46rpx;
  opacity: 0.3;
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  text-align: center;
  font-family: Arial;
}