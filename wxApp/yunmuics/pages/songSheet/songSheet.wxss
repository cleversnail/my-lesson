.container {
  padding: 20rpx;
  background-color: rgb(253, 253, 251);
}

.head-scroll-view {
  display: flex;
  justify-content: space-between;
}

.scroll-view {
  white-space: nowrap;
}

.recommend-head {
  display: flex;
  font-size: 30rpx;
  color: rgb(104, 101, 101);
}

.recommend-head__item {
  margin-bottom: 5px;
}

.choice {
  color: red;
  padding-bottom: 2px;
  border-bottom: 3px solid red;
  transition: border-bottom 0.1s;
  transition: color 0.2s;
}

.recommend-head__item:active {
  background-color: #eee;
}

.recommend-head text {
  margin: 0 35rpx;
}

.recommend-head__more {
  width: 40rpx;
  height: 40rpx;
}

.recommend-head__img {
  width: 100%;
  height: 100%;
}

.page-swiper {
  height: 430rpx;
}

.page-swiper .swiperClass {
  margin: 0;
  margin-top: 10px;
  height: 400rpx;
}

.slide-item {
  width: 100%;
  height: 80%;
  border-radius: 10rpx;
  position: relative;
}

.slide-item-img {
  width: 100%;
  height: 100%;
}

.play-count {
  position: absolute;
  top: 0;
  right: 10rpx;
  color: #fff;
}

.play {
  width: 20rpx;
  height: 20rpx;
}

.page-swiper-item {
  font-size: 24rpx;
  background-color: #fff;
}

.content-swiper-text {
  padding: 10rpx 20rpx 0 20rpx;
}

.active {
  transform: none;
  transition: all 0.2s ease-in 0s;
}

.quiet {
  transform: scale(0.86666);
  transition: all 0.2s ease-in 0s;
}

/* 后面的图片 */

.content-page-block {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.content-block {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  width: 230rpx;
  font-size: 22rpx;
  margin-bottom: 30rpx;
}

.content-img {
  width: 220rpx;
  height: 220rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.content-img image {
  width: 100%;
  height: 100%;
}

.content-text {
  padding: 5rpx 15rpx;
  max-height: 60rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.pageTwo .swiperClass {
  margin: 0;
  margin-top: 10px;
}