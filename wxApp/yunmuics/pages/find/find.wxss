.container {
  padding: 20rpx;
  padding-bottom: 16%;
}

.head-swiper__banners {
  border-radius: 15rpx;
  overflow: hidden;
}

.swiper-banners {
  height: 250rpx;
}

.banners-image {
  width: 100%;
  height: 100%;
}
.banners-typeTitle{
position: absolute;
right: 0;
bottom: 0;
font-size: 22rpx;
padding:6rpx 10rpx;
border-top-left-radius: 15rpx ;
color: #ffffff;
}

.head-entrance {
  margin-top: 30rpx;
}

.scroll-view {
  white-space: nowrap;
  width: 750rpx;
  margin-right: -20rpx;
}

.scroll-view__X {
  display: inline-block;
  width: 85rpx;
  margin-right: 45rpx;
  height: 130rpx;
  text-align: center;
}

.entrance-icon {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto;
}

.scroll-view__X text {
  font-size: 22rpx;
  color: rgb(51, 51, 51);
}

/* 歌单精选 */

.select-title, .play-title {
  display: flex;
  align-items: center;
  /* border: 1px solid #000; */
  height: 60rpx;
  margin: 20rpx 0;
}

.select-text-front, .play-text-front {
  width: 77%;
  font-weight: 800;
  display: inline-block;
}

.select-text-after, .play-text-after {
  width: 140rpx;
  height: 50rpx;
  border: 1px solid rgb(210, 210, 2210);
  border-radius: 27rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
}

.select-box {
  display: inline-block;
  width: 200rpx;
  height: 290 rpx 0rpx;
  margin-right: 20rpx;
  vertical-align: top;
}

.select-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.select-text {
  margin-top: -30rpx;
  display: block;
  width: 200rpx;
  font-size: 24rpx;
  color: rgb(128, 128, 128);
  white-space: pre-line;
  height: 100rpx;
}

/* 播放块 */

.play-img-bef {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.play-body-outside {
  width: 95%;
  display: inline-block;
}

.play-box {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.box-text-bre{
  max-width: 420rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.play-text-after {
  width: 150rpx;
}

.play-box-text {
  width: 67%;
}

.text-bre-one {
  display: inline-block;
}

.text-bre-two {
  display: inline-block;
  font-size: 26rpx;
  color: rgb(195, 195, 195);
  margin-left: 10rpx;
}

.play-text-img {
  width: 25rpx;
  height: 25rpx;
}

.box-text-aft {
  font-size: 26rpx;
  color: rgb(185, 185, 185);
  padding-top: 10rpx;
}

.play-img-aft {
  width: 50rpx;
  height: 50rpx;
}
