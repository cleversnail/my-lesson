*
  margin 0
  padding 0

html, body
  font-size 30px

section
  margin-bottom .667rem
  background-color #fff
  border-radius 10px
  overflow hidden

.card
  padding 1rem
  background-color #F5FAFE
  &-wrapper
    width 100%
    .user-info
      width 100%
      font-size 0
      &__pic
        width 100%
        img
          width 100%
      &__desc
        padding .333rem .667rem
        .name
          font-size 1rem
          color #010101
          .sex
            width .67rem
            height .6rem
            display inline-block
            background-image url(./img/sexf.png)
            background-size contain

